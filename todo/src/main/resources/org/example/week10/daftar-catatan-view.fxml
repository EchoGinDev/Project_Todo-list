<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.week10.CatatanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox>
        <Label text="Judul:" />
        <TextField fx:id="txtFldJudul" promptText="Judul" />
        <Label text="Isi:">
            <padding>
                <Insets top="10.0" />
            </padding></Label>
        <TextArea fx:id="txtAreaKonten" prefHeight="109.0" prefWidth="452.0" promptText="Isi" />
    </VBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="19.0" prefWidth="200.0">
        <Button fx:id="btnSimpan" onAction="#onBtnSimpanClick" text="Simpan">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
        <Button fx:id="btnHapus" onAction="#onBtnHapus" text="Hapus">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
    </HBox>
   <StackPane prefHeight="27.0" prefWidth="275.0">
      <children>
         <TextField fx:id="searchbar" prefHeight="26.0" prefWidth="309.0" styleClass="transparent" />
         <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="69.0" styleClass="delete-button" text="Bersihkan" textAlignment="RIGHT" StackPane.alignment="CENTER_RIGHT">
            <StackPane.margin>
               <Insets />
            </StackPane.margin>
         </Button>
      </children>
   </StackPane>
    <TableView fx:id="table" layoutY="163.2" prefHeight="295.0" prefWidth="452.0">
        <columns>
            <TableColumn fx:id="id" maxWidth="1.7976931348623157E308" prefWidth="50.0" resizable="false" text="ID" />
            <TableColumn fx:id="judul" maxWidth="1.7976931348623157E308" prefWidth="400.0" resizable="false" text="Judul" />
        </columns>
    </TableView>
</VBox>
